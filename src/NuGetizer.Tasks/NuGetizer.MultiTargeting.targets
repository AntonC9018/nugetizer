<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="NuGetizer.Common.targets"/>
  
  <Target Name="GetNativeManifest" />
  <Target Name="GetCopyToOutputDirectoryItems" />

  <!--
  ============================================================
  GetTargetPathWithTargetPlatformMoniker
  NOTE: depends on Microsoft.Common.CrossTargeting.targets

  When cross-targeting and the authoring project references a 
  nugetized library, return all the determined target paths.
  ============================================================
    -->
  <Target Name="GetTargetPathWithTargetPlatformMoniker"
          DependsOnTargets="_SetGetTargetPathWithTargetPlatformMonikerInnerTarget;DispatchToInnerBuilds"
          Returns="@(InnerOutput)">
    <ItemGroup>
      <InnerOutput>
        <IsNuGetized>true</IsNuGetized>
      </InnerOutput>
    </ItemGroup>
  </Target>

  <Target Name="_SetGetTargetPathWithTargetPlatformMonikerInnerTarget">
    <PropertyGroup>
      <InnerTargets>GetTargetPathWithTargetPlatformMoniker</InnerTargets>
    </PropertyGroup>
  </Target>

  <!--
	============================================================
  GetPackageContents
  Cross-targeting version of GetPackageContents. 
  NOTE: depends on Microsoft.Common.CrossTargeting.targets
   
  [OUT]
  @(InnerOutput) - The combined output items of the inner targets across
                   all builds.
  ============================================================
  -->
  <Target Name="GetPackageContents" DependsOnTargets="_SetGetPackageContentsInnerTarget;DispatchToInnerBuilds" Returns="@(_PackageContent)">
    <ItemGroup>
      <_PackageContent Include="@(InnerOutput)" />
    </ItemGroup>
  
    <!-- _AddPackageManifest adds per-TFM, so deduplicate and remove the TFM -->
    <ItemGroup Condition="'$(IsPackable)' == 'true'">
      <_PackageMetadataContent Include="@(_PackageContent -> WithMetadataValue('Kind', 'Metadata'))" />
      <_PackageContent Remove="@(_PackageMetadataContent)" />
      <_PackageContent Include="@(_PackageMetadataContent -> Distinct())">
        <Platform>$(Platform)</Platform>
        <TargetFrameworkMoniker />
      </_PackageContent>
    </ItemGroup>
  </Target>

  <Target Name="_SetGetPackageContentsInnerTarget">
    <PropertyGroup>
      <InnerTargets>GetPackageContents</InnerTargets>
    </PropertyGroup>
  </Target>


</Project>
